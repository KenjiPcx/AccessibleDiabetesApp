<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Diabot.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:meals="clr-namespace:Diabot.Views.Meals"
    xmlns:scheduler="clr-namespace:Diabot.Views.Scheduler"
    xmlns:home="clr-namespace:Diabot.Views.Home"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Meals"
            ContentTemplate="{DataTemplate meals:MealsPage}"
            Icon="foodbowl.svg" />
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate home:HomePage}"
            Icon="sugarcubes.svg" />
        <ShellContent
            Title="Schedule"
            ContentTemplate="{DataTemplate scheduler:SchedulerPage}"
            Icon="calendar.svg" />
    </TabBar>
    
</Shell>
