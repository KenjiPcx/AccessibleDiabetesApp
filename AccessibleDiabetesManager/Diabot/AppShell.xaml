<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Diabot.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Diabot.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Meals"
            ContentTemplate="{DataTemplate view:MealsPage}"
            Icon="foodbowl.svg"
            Route="Meals" />
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:HomePage}"
            Icon="sugarcubes.svg"
            Route="Home" />
        <ShellContent
            Title="Schedule"
            ContentTemplate="{DataTemplate view:SchedulerPage}"
            Icon="calendar.svg"
            Route="Schedule" />
    </TabBar>
    
</Shell>
