<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MockHumanCGM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MockHumanCGM.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:UserStatsView}"
            Route="MainPage" />

        <ShellContent
            Title="Actions"
            ContentTemplate="{DataTemplate views:ActionsView}"
            Route="ActionPage" />
        
        <ShellContent
            Title="App Configs"
            ContentTemplate="{DataTemplate views:AppConfigsView}"
            Route="ActionPage" />
    </TabBar>


</Shell>
